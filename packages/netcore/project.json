{
  "name": "netcore",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/netcore/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/netcore",
        "main": "packages/netcore/src/index.ts",
        "tsConfig": "packages/netcore/tsconfig.lib.json",
        "assets": [
          "packages/netcore/*.md",
          {
            "input": "./packages/netcore/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./packages/netcore/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./packages/netcore",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./packages/netcore",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/netcore/**/*.ts",
          "packages/netcore/package.json",
          "packages/netcore/generators.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/netcore/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "submodule": {
      "command": "git submodule add -f https://github.com/codedesignplus/CodeDesignPlus.Net.Library.git ./submodules/CodeDesignPlus.Net.Library"
    }
  },
  "tags": []
}
